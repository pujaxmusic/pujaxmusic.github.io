/* Pujax Music Website Styles */

:root {
  --primary: #0f172a;
  --accent: #00ffb3;
  --secondary: #1e293b;
  --text: #f1f5f9;
  --muted: #64748b;
  --spotify: #1db954;
  --font-main: 'Inter', Arial, sans-serif;
  --font-title: 'Orbitron', 'Inter', Arial, sans-serif;
}

html {
  scroll-behavior: smooth;
  overflow-x: hidden;
}

body {
  margin: 0;
  font-family: var(--font-main);
  background: var(--primary);
  color: var(--text);
  min-height: 100vh;
  overflow-x: hidden;
}

/* Universal container for consistent width */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
  width: 100%;
  box-sizing: border-box;
}

/* Navbar */
.navbar {
  background: var(--secondary);
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  position: sticky;
  top: 0;
  z-index: 100;
}
.nav-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0.5rem 2rem;
  width: 100%;
  box-sizing: border-box;
}
.nav-logo a {
  font-family: var(--font-title);
  font-size: 2rem;
  color: var(--accent);
  text-decoration: none;
  font-weight: 900;
  letter-spacing: 2px;
}
.nav-menu {
  display: flex;
  gap: 2rem;
}
.nav-link {
  color: var(--text);
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s;
}
.nav-link:hover, .spotify-link {
  color: var(--spotify);
}
.hamburger {
  display: none;
  flex-direction: column;
  cursor: pointer;
  gap: 4px;
}
.hamburger .bar {
  width: 25px;
  height: 3px;
  background: var(--text);
  border-radius: 2px;
}

/* Hero Section */
.hero {
  position: relative;
  min-height: 90vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(120deg, #0f172a 60%, #1db954 100%);
  overflow: hidden;
}
.hero-background {
  position: absolute;
  inset: 0;
  z-index: 0;
}
.hero-overlay {
  position: absolute;
  inset: 0;
  background: rgba(15,23,42,0.7);
  z-index: 1;
}
.hero-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  gap: 3rem;
  max-width: 1200px;
  margin: 0 auto;
  padding: 4rem 2rem 2rem 2rem;
  width: 100%;
  box-sizing: border-box;
}
.hero-text {
  max-width: 500px;
}
.hero-title {
  font-family: var(--font-title);
  font-size: 3rem;
  margin: 0 0 0.5rem 0;
  color: var(--accent);
}
.title-main {
  display: block;
  font-size: 3.5rem;
  font-weight: 900;
  letter-spacing: 2px;
}
.title-sub {
  display: block;
  font-size: 1.5rem;
  color: var(--text);
  font-weight: 400;
  margin-top: 0.5rem;
}
.hero-description {
  color: var(--muted);
  font-size: 1.2rem;
  margin-bottom: 2rem;
}
.hero-buttons {
  display: flex;
  gap: 1rem;
}
.btn {
  padding: 0.75rem 2rem;
  border: none;
  border-radius: 30px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  text-decoration: none;
  transition: background 0.2s, color 0.2s;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
}
.btn-primary {
  background: var(--spotify);
  color: #fff;
}
.btn-primary:hover {
  background: #169c43;
}
.btn-secondary {
  background: var(--secondary);
  color: var(--accent);
  border: 1px solid var(--accent);
}
.btn-secondary:hover {
  background: var(--accent);
  color: var(--primary);
}
.hero-visual {
  display: flex;
  align-items: center;
  justify-content: center;
}
.hero-image-container {
  width: 220px;
  height: 220px;
  background: #222b3a;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 32px rgba(0,0,0,0.25);
  position: relative;
}
.audio-visualizer {
  display: flex;
  align-items: flex-end;
  height: 120px;
  width: 120px;
  gap: 4px;
  margin: 0 auto;
}
.audio-visualizer .bar {
  width: 10px;
  height: 40px;
  background: var(--accent);
  border-radius: 4px 4px 0 0;
  animation: visualizer 1.2s infinite ease-in-out alternate;
}
.audio-visualizer .bar:nth-child(2) { animation-delay: 0.1s; }
.audio-visualizer .bar:nth-child(3) { animation-delay: 0.2s; }
.audio-visualizer .bar:nth-child(4) { animation-delay: 0.3s; }
.audio-visualizer .bar:nth-child(5) { animation-delay: 0.4s; }
.audio-visualizer .bar:nth-child(6) { animation-delay: 0.5s; }
.audio-visualizer .bar:nth-child(7) { animation-delay: 0.6s; }
.audio-visualizer .bar:nth-child(8) { animation-delay: 0.7s; }
@keyframes visualizer {
  0% { height: 40px; }
  50% { height: 120px; }
  100% { height: 40px; }
}
.scroll-indicator {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: 3;
}
.scroll-arrow {
  width: 30px;
  height: 30px;
  border-left: 3px solid var(--accent);
  border-bottom: 3px solid var(--accent);
  transform: rotate(-45deg);
  margin: 0 auto;
  animation: bounce 1.5s infinite;
}
@keyframes bounce {
  0%, 100% { transform: translateY(0) rotate(-45deg); }
  50% { transform: translateY(10px) rotate(-45deg); }
}

/* About Section */
.about {
  background: var(--primary);
  padding: 5rem 2rem 3rem 2rem;
}
.section-header {
  text-align: center;
  margin-bottom: 2.5rem;
}
.section-title {
  font-family: var(--font-title);
  font-size: 2.5rem;
  color: var(--accent);
  margin: 0;
}
.section-subtitle {
  color: var(--muted);
  font-size: 1.1rem;
  margin-top: 0.5rem;
}
.about-content {
  display: flex;
  flex-wrap: wrap;
  gap: 3rem;
  align-items: center;
  justify-content: center;
  max-width: 1100px;
  margin: 0 auto;
  width: 100%;
  box-sizing: border-box;
}
.about-text {
  flex: 1 1 350px;
  min-width: 300px;
}
.about-card {
  background: var(--secondary);
  border-radius: 18px;
  padding: 2rem;
  box-shadow: 0 4px 24px rgba(0,0,0,0.10);
}
.stats {
  display: flex;
  gap: 2rem;
  margin-top: 1.5rem;
  justify-content: center;
  flex-wrap: wrap;
}
.stat {
  text-align: center;
}
.stat-number {
  font-size: 2rem;
  color: var(--accent);
  font-family: var(--font-title);
  font-weight: 700;
}
.stat-label {
  color: var(--muted);
  font-size: 1rem;
}
.about-image {
  flex: 1 1 250px;
  min-width: 220px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.image-container {
  position: relative;
  width: 220px;
  height: 220px;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0,0,0,0.18);
}
.profile-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
}
.image-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.18);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s;
}
.image-container:hover .image-overlay {
  opacity: 1;
}
.play-button {
  background: var(--accent);
  color: var(--primary);
  border-radius: 50%;
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.18);
}

/* Music Section */
.music {
  background: var(--secondary);
  padding: 5rem 2rem 3rem 2rem;
}
.music .container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.music-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 3rem;
  align-items: flex-start;
  justify-content: center;
  max-width: 1100px;
  margin: 0 auto;
  width: 100%;
  box-sizing: border-box;
}
.featured-release {
  flex: 1 1 350px;
  min-width: 320px;
  background: var(--primary);
  border-radius: 18px;
  padding: 2rem;
  box-shadow: 0 4px 24px rgba(0,0,0,0.10);
  text-align: center;
}
.featured-title {
  font-family: var(--font-title);
  color: var(--accent);
  font-size: 1.3rem;
  margin-bottom: 1rem;
}
.spotify-embed {
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0,0,0,0.12);
  margin: 0 auto;
  max-width: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.releases-grid {
  flex: 2 1 400px;
  display: flex;
  flex-wrap: wrap;
  gap: 1.5rem;
}
.release-card {
  background: var(--primary);
  border-radius: 14px;
  padding: 1.2rem 1.5rem;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
  min-width: 180px;
  flex: 1 1 180px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.release-info h4 {
  margin: 0 0 0.3rem 0;
  color: var(--accent);
  font-family: var(--font-title);
  font-size: 1.1rem;
}
.release-info p {
  color: var(--muted);
  font-size: 0.95rem;
  margin: 0 0 0.5rem 0;
}
.release-link {
  color: var(--spotify);
  text-decoration: none;
  font-weight: 600;
  font-size: 1rem;
  transition: color 0.2s;
}
.release-link:hover {
  color: #169c43;
}
.music-cta {
  text-align: center;
  margin-top: 2.5rem;
}

/* Social Section */
.social {
  background: var(--primary);
  padding: 4rem 2rem 3rem 2rem;
}
.social-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
  align-items: center;
  justify-content: center;
  max-width: 900px;
  margin: 0 auto;
  width: 100%;
  box-sizing: border-box;
}
.social-card {
  background: var(--secondary);
  border-radius: 14px;
  padding: 1.5rem 2rem;
  min-width: 160px;
  text-align: center;
  color: var(--text);
  font-size: 1.1rem;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
  transition: background 0.2s, color 0.2s;
  cursor: pointer;
  text-decoration: none;
}
.social-card.spotify { color: var(--spotify); }
.social-card.instagram { color: #e1306c; }
.social-card.soundcloud { color: #ff5500; }
.social-card.youtube { color: #ff0000; }
.social-card:hover {
  background: var(--accent);
  color: var(--primary);
}
.social-card i {
  font-size: 2rem;
  margin-bottom: 0.5rem;
}

/* Contact Section - Hidden temporarily */
.contact {
  background: var(--secondary);
  padding: 5rem 2rem 3rem 2rem;
  display: none; /* Temporarily hidden */
}
.contact-content {
  display: flex;
  flex-wrap: wrap;
  gap: 3rem;
  align-items: flex-start;
  justify-content: center;
  max-width: 1100px;
  margin: 0 auto;
}
.contact-info {
  flex: 1 1 350px;
  min-width: 300px;
}
.contact-card {
  background: var(--primary);
  border-radius: 18px;
  padding: 2rem;
  box-shadow: 0 4px 24px rgba(0,0,0,0.10);
}
.contact-items {
  margin-top: 1.5rem;
}
.contact-item {
  display: flex;
  align-items: center;
  gap: 0.7rem;
  color: var(--muted);
  font-size: 1rem;
  margin-bottom: 0.7rem;
}
.contact-form {
  flex: 1 1 350px;
  min-width: 300px;
  background: var(--primary);
  border-radius: 18px;
  padding: 2rem;
  box-shadow: 0 4px 24px rgba(0,0,0,0.10);
  box-sizing: border-box;
}
.form-group {
  position: relative;
  margin-bottom: 1.5rem;
  box-sizing: border-box;
}
.form-group input,
.form-group select,
.form-group textarea {
  width: 100%;
  max-width: 100%;
  padding: 1rem 1.2rem;
  border: 1px solid var(--muted);
  border-radius: 8px;
  background: var(--secondary);
  color: var(--text);
  font-size: 1rem;
  outline: none;
  transition: border 0.2s;
  box-sizing: border-box;
}
.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  border: 1.5px solid var(--accent);
}
.form-group label {
  position: absolute;
  left: 1.2rem;
  top: 1.1rem;
  color: var(--muted);
  font-size: 1rem;
  pointer-events: none;
  transition: 0.2s;
}
.form-group input:focus + label,
.form-group input:not(:placeholder-shown) + label,
.form-group textarea:focus + label,
.form-group textarea:not(:placeholder-shown) + label {
  top: -0.8rem;
  left: 0.8rem;
  font-size: 0.85rem;
  color: var(--accent);
  background: var(--primary);
  padding: 0 0.3rem;
}
.form-group textarea {
  resize: vertical;
  min-height: 100px;
  box-sizing: border-box;
}

/* Footer */
.footer {
  background: var(--primary);
  padding: 2rem 0 1rem 0;
  color: var(--muted);
  font-size: 1rem;
}
.footer-content {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  max-width: 1100px;
  margin: 0 auto 1rem auto;
  gap: 2rem;
}
.footer-logo h3 {
  font-family: var(--font-title);
  color: var(--accent);
  margin: 0 0 0.2rem 0;
}
.footer-links {
  display: flex;
  gap: 1.5rem;
}
.footer-links a {
  color: var(--muted);
  text-decoration: none;
  transition: color 0.2s;
}
.footer-links a:hover {
  color: var(--accent);
}
.footer-social a {
  color: var(--spotify);
  font-size: 1.5rem;
  margin-left: 1rem;
  transition: color 0.2s;
}
.footer-social a:hover {
  color: var(--accent);
}
.footer-social a:first-child {
  margin-left: 0;
}
.footer-bottom {
  text-align: center;
  color: var(--muted);
  font-size: 0.95rem;
}

/* Responsive Design */
@media (max-width: 900px) {
  .hero-content, .about-content, .music-grid, .contact-content, .footer-content {
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }
  .navbar {
    padding: 0.5rem 1rem;
  }
  .nav-container {
    padding: 0.5rem 1rem;
  }
  .container {
    max-width: 100%;
    padding: 0 1rem;
  }
  
  /* Mobile Navigation */
  .hamburger {
    display: flex !important;
  }
  .nav-menu {
    position: fixed;
    left: -100%;
    top: 60px;
    flex-direction: column;
    background-color: var(--secondary);
    width: 100%;
    text-align: center;
    transition: 0.3s;
    box-shadow: 0 10px 27px rgba(0, 0, 0, 0.05);
    padding: 2rem 0;
    gap: 1.5rem;
  }
  .nav-menu.active {
    left: 0;
  }
  .nav-link {
    padding: 0.5rem 0;
    display: block;
    font-size: 1.1rem;
  }
  .hamburger.active .bar:nth-child(2) {
    opacity: 0;
  }
  .hamburger.active .bar:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }
  .hamburger.active .bar:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }
  .hamburger .bar {
    transition: 0.3s;
  }
}

